JWT_SECRET=seu-jwt-secret-super-seguro-MUDE-ESTE-TOKEN
JWT_REFRESH_SECRET=seu-refresh-secret-super-seguro-MUDE-ESTE-TOKEN
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ==============================================
# EMAIL (SMTP)
# ==============================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=seu-email@gmail.com
EMAIL_PASS=sua-senha-de-app-do-gmail
EMAIL_FROM_NAME=Sistema de Agendamentos
EMAIL_FROM_ADDRESS=noreply@seudominio.com

# ==============================================
# WHATSAPP (OPCIONAL)
# ==============================================
WHATSAPP_TOKEN=seu-token-da-api-whatsapp
WHATSAPP_PHONE_ID=seu-phone-id-whatsapp
WHATSAPP_VERIFY_TOKEN=seu-verify-token-webhook

# ==============================================
# GOOGLE MAPS (OPCIONAL)
# ==============================================
NEXT_PUBLIC_GOOGLE_MAPS_KEY=sua-chave-da-api-google-maps

# ==============================================
# PAGAMENTOS (OPCIONAL)
# ==============================================
# Stripe
STRIPE_PUBLIC_KEY=pk_test_sua_chave_publica_stripe
STRIPE_SECRET_KEY=sk_test_sua_chave_secreta_stripe
STRIPE_WEBHOOK_SECRET=whsec_seu_webhook_secret

# Mercado Pago
MERCADOPAGO_ACCESS_TOKEN=seu_access_token_mercadopago
MERCADOPAGO_PUBLIC_KEY=sua_chave_publica_mercadopago

# ==============================================
# UPLOAD DE ARQUIVOS
# ==============================================
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf
UPLOAD_PATH=/app/uploads

# ==============================================
# RATE LIMITING
# ==============================================
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# ==============================================
# LOGS
# ==============================================
LOG_LEVEL=info
LOG_FILE_PATH=/app/logs

# ==============================================
# BACKUP
# ==============================================
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=seu-bucket-s3-backup
AWS_ACCESS_KEY_ID=sua-access-key-aws
AWS_SECRET_ACCESS_KEY=sua-secret-key-aws
AWS_REGION=us-east-1

# ==============================================
# MONITORAMENTO (OPCIONAL)
# ==============================================
SENTRY_DSN=https://sua-dsn-sentry.ingest.sentry.io/projeto
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

