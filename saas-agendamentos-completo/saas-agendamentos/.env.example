# ==============================================
# CONFIGURAÇÕES GERAIS
# ==============================================
NODE_ENV=production
FRONTEND_URL=https://seudominio.com
NEXT_PUBLIC_SITE_URL=https://seudominio.com
NEXT_PUBLIC_API_URL=https://seudominio.com/api

# ==============================================
# BANCO DE DADOS POSTGRESQL
# ==============================================
DB_NAME=saas_agendamentos
DB_USER=postgres
DB_PASSWORD=postgres123_MUDE_ESTA_SENHA
DATABASE_URL=postgresql://postgres:postgres123_MUDE_ESTA_SENHA@postgres:5432/saas_agendamentos

# ==============================================
# REDIS (CACHE E SESSÕES)
# ==============================================
REDIS_PASSWORD=redis123_MUDE_ESTA_SENHA
REDIS_URL=redis://:redis123_MUDE_ESTA_SENHA@redis:6379

# ==============================================
# AUTENTICAÇÃO JWT
